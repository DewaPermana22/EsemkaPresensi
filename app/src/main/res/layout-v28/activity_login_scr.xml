<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScr">

    <EditText
        android:id="@+id/etKodeReferalLogin"
        android:layout_width="358dp"
        android:layout_height="56dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/bg_buttons"
        android:backgroundTint="@color/LightGray"
        android:fontFamily="@font/inter"
        android:hint="Input Kode anda!"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/Gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/etEmailLogin"
        android:layout_width="358dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_buttons"
        android:backgroundTint="@color/LightGray"
        android:fontFamily="@font/inter"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="@color/Gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etKodeReferalLogin" />

    <EditText
        android:id="@+id/etPw"
        android:layout_width="358dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_buttons"
        android:backgroundTint="@color/LightGray"
        android:fontFamily="@font/inter"
        android:hint="Password"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/Gray"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmailLogin" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/bg_buttons"
        android:backgroundTint="@color/primaryColor"
        android:fontFamily="@font/inter"
        android:text="Log in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPw" />

    <Button
        android:id="@+id/buttonToRegister"
        android:layout_width="358dp"
        android:layout_height="48dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_bt_login"
        android:fontFamily="@font/inter"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/primaryColor"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="11sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Saya telah setuju dengan syarat dan ketentuan berikut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonToRegister" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_detail" />
</androidx.constraintlayout.widget.ConstraintLayout>