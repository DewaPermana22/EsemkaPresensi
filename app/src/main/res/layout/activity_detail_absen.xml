<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/BgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailAbsenAct">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:background="@color/BgColor"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="112dp"
           android:fontFamily="@font/poppins_medium"
           android:text="Nama Pegawai "
           android:textColor="@color/black"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.11"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <EditText
           android:enabled="false"
           android:id="@+id/namePegawaiIzin"
           android:layout_width="345dp"
           android:layout_height="55dp"
           android:layout_marginTop="4dp"
           android:background="@drawable/bg_buttons"
           android:backgroundTint="@color/LightGray"
           android:ems="10"
           android:fontFamily="@font/inter_semibold"
           android:hint="-"
           android:inputType="text"
           android:padding="12dp"
           android:textColor="@color/Gray"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/textView2" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
           android:fontFamily="@font/poppins_medium"
           android:text="Kehadiran"
           android:textColor="@color/black"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.097"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/namePegawaiIzin" />

       <EditText
           android:enabled="false"
           android:id="@+id/statusIzin"
           android:layout_width="345dp"
           android:layout_height="55dp"
           android:layout_marginTop="4dp"
           android:background="@drawable/bg_buttons"
           android:backgroundTint="@color/LightGray"
           android:ems="10"
           android:fontFamily="@font/inter_semibold"
           android:hint="-"
           android:inputType="text"
           android:padding="12dp"
           android:textColor="@color/Gray"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/textView3" />

       <TextView
           android:id="@+id/textView4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
           android:fontFamily="@font/poppins_medium"
           android:text="Hari/Tanggal "
           android:textColor="@color/black"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.105"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/statusIzin" />

       <EditText
           android:enabled="false"
           android:id="@+id/HariTanggal"
           android:layout_width="345dp"
           android:layout_height="55dp"
           android:layout_marginTop="8dp"
           android:background="@drawable/bg_buttons"
           android:backgroundTint="@color/LightGray"
           android:ems="10"
           android:fontFamily="@font/inter_semibold"
           android:text="-"
           android:inputType="text"
           android:padding="12dp"
           android:textColor="@color/Gray"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/textView4" />

       <TextView
           android:id="@+id/textView5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="12dp"
           android:fontFamily="@font/poppins_medium"
           android:text="Detail Foto"
           android:textColor="@color/black"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.097"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/HariTanggal" />

       <ImageView
           android:id="@+id/buktiFoto"
           android:scaleType="centerCrop"
           android:layout_width="345dp"
           android:layout_height="270dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/textView5"
           app:layout_constraintVertical_bias="0.092"
           android:src="@drawable/empty_image_absen" />

       <ImageView
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:id="@+id/buktiFotoPulang"
           android:scaleType="centerCrop"
           android:layout_width="345dp"
           android:layout_marginTop="20dp"
           android:layout_height="270dp"
           app:layout_constraintTop_toBottomOf="@+id/buktiFoto"
           app:layout_constraintVertical_bias="0.092"
           android:src="@drawable/empty_image_absen" />

       <TextView
           android:id="@+id/textView13"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/poppins_semibold"
           android:text="Detail Absensi Pegawai"
           android:textColor="@color/black"
           android:textSize="18sp"
           app:layout_constraintBottom_toTopOf="@+id/namePegawaiIzin"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.497"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintVertical_bias="0.486" />

       <Button
           android:id="@+id/buttonBack"
           android:layout_width="345dp"
           android:layout_height="wrap_content"
           android:background="@drawable/bg_buttons"
           android:backgroundTint="@color/primaryColor"
           android:fontFamily="@font/poppins_semibold"
           android:text="Kembali"
           android:layout_marginBottom="40dp"
           android:layout_marginTop="20dp"
           android:textAllCaps="false"
           android:textColor="@color/white"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/buktiFotoPulang"
           app:layout_constraintVertical_bias="1.0" />
   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>